<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25b7f1">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="2dp"
        android:adjustViewBounds="true"
        android:src="@drawable/alippe_menu_teacher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="100dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/button_alippe_menu_cards"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="Әліппе карточкалары"
                android:textColor="@color/alippe_menu_button_text_color" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/button_alippe_menu_table"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="Әліппе кестесі"
                android:textColor="@color/alippe_menu_button_text_color" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/button_alippe_menu_low_level"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="практика бастауыш деңгей"
                android:textColor="@color/alippe_menu_button_text_color" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/button_alippe_menu_middle_level"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="практика орта деңгей"
                android:textColor="@color/alippe_menu_button_text_color" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="5dp">

            <Button
                android:id="@+id/button_alippe_menu_high_level"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@android:color/white"
                android:text="практика жоғары деңгей"
                android:textColor="@color/alippe_menu_button_text_color" />
        </android.support.v7.widget.CardView>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>