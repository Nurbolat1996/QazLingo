<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground">


    <TextView
        android:id="@+id/alippe_high_level_text_view_lenta"
        android:layout_width="match_parent"
        android:background="@color/grayBackground"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="#2d2c2c"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="16sp"
        android:text="Cөздің латынша нұсқасын еңгізіңіз"
         />

    <android.support.v7.widget.CardView
        android:id="@+id/alippe_high_level_cardview"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alippe_high_level_text_view_lenta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <TextView
            android:id="@+id/alippe_high_level_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="А"
            android:textSize="24sp" />
    </android.support.v7.widget.CardView>


    <EditText
        android:id="@+id/alippe_high_level_edit_text"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="start"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alippe_high_level_cardview"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Латынша еңгізіңіз"
        android:inputType="textMultiLine"
        android:maxLength="200"
        android:background="@drawable/back"/>

    <Button
        android:id="@+id/alippe_high_level_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:text="Келесі" />

    <TextView
        android:id="@+id/alippe_high_level_text_view_right_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alippe_high_level_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Дұрыс жауап:" />




</RelativeLayout>